@model IEnumerable<ABB.Catalogo.Entidades.Core.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomProducto)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarcaProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModeloProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LineaProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GarantiaProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DescCategoria)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarcaProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModeloProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LineaProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GarantiaProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DescCategoria)
            </td>
            <td>
                @if (item.Imagen != null)
                {
                    <div style="float:left;margin-right:20px">
                        <img width="75" height="75" src="@Url.Action("getImage", "Producto", new { id=item.IdProducto })" />
                    </div>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
